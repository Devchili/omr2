<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.letssolvetogether.omr.main">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.letssolvetogether.omr.ui.activities.HomeActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.letssolvetogether.omr.ui.activities.OMRKeyActivity" />
        <activity
            android:name="com.letssolvetogether.omr.ui.activities.camera.CameraActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity android:name="com.letssolvetogether.omr.ui.activities.result.ResultActivity" />
        <activity
            android:name="com.letssolvetogether.omr.ui.activities.SettingsActivity"
            android:label="@string/title_activity_settings" />
    </application>
</manifest>